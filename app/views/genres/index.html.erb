

<div class="card center">
  <h1>Featured Movies</h1>
</div>

<marquee behavior="scroll" direction="left" hspace="0">
<% @movies.each do |movie| %>
<img class= "postersh" src="<%=movie.poster %>">
<% end %>

 </marquee>

    <% @genres.each do |genre| %>
        <h3 class="orange-text lighten-2"><%= genre.name %></h3>

        <div class="row">
          <% genre.movies.each do |movie| %>
            <div class="col s8 m6 l3">
              <div class="card hoverable">
                <img class="poster img-responsive" src="<%= movie.poster %>">
                <div class="card-content">
                  <p class="truncate"><%= movie.name %></p>
                </div>
                <div class="card-action">
                  <%= link_to "More Info", movie, class: "btn btn-default" %>
                </div>
              </div>
            </div>
            <% end %>
          </div>

        

    <% end %>


<br>
