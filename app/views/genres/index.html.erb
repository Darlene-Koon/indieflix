

<div class="card center">
  <a class="banner"><%= image_tag "movies.svg" %></a>
</div>



    <% @genres.each do |genre| %>
        <h3 class="orange-text lighten-2"><%= genre.name %></h3>

        <div class="row">
          <% genre.movies.each do |movie| %>
            <div class="col s8 m6 l3">
              <div class="card hoverable">
                <img class="poster img-responsive" src="<%= movie.poster %>">
                <div class="card-content">
                  <p class="truncate"><%= movie.name %></p>
                </div>
                <div class="card-action">
                  <%= link_to "More Info", movie, class: "btn btn-default" %>
                </div>
              </div>
            </div>
            <% end %>
          </div>

        

    <% end %>


<br>
